<div id="menu" class="padding-sidebar bg-medium shadow-left" data-menu>
  <p class="color-secondary margin-top-m margin-bottom-m fst-italic fsi-0-875">{{ pkg.description }}</p>

  <nav class="margin-bottom-l" aria-labelledby="nav">
    <h2 class="margin-bottom-s fsi-1-25" id="nav">Tags</h2>
    <ol class="nav">
      {% for navTag in tags %}
        <li class="margin-top-xs margin-bottom-xs neg-margin-left-m neg-margin-right-m">
          <a class="color-secondary" 
          href="{{ navTag.slug | route({ listIsSortedBy: renderData.listIsSortedBy }) }}"
          {% if tag.slug == navTag.slug %} aria-current="page" {% endif %}
        >
            {{navTag.name}}
          </a>
          <div class="nav-tagCount">{{navTag.items.length }}</div>
        </li>
      {% endfor %}
    </ol>
  </nav>

  {% if vars.isProduction %}
    <div id="carbon-container"></div>
  {% endif %}

  <div class="fsi-0-875 margin-top-l">
    <p class="margin-bottom-xs color-secondary">Brought to you by Robert Willemelis</p>
    <p class="margin-bottom-l color-secondary">(<a class="color-secondary" href="http://www.user.coffee">Website</a>,
      <a class="color-secondary" href="https://twitter.com/robertSPD" aria-label="Robert on Twitter">Twitter</a>,
      <a class="color-secondary" href="https://github.com/willi84" aria-label="Robert on GitHub">GitHub</a>)</p>

    <p class="margin-bottom-s color-secondary">inspired from the Project <a class="color-secondary" href="https://tiny-helpers.dev/">tiny-helpers.dev</a> from <a class="color-secondary" href="https://www.stefanjudis.com">Stefan Judis</a></p>

    <p class="margin-bottom-s color-secondary">and these lovely people:</p>
    <ul class="inline-list">
      {% for contributor in contributors %}
        <li class="neg-margin-right-s">
          <a href="https://github.com/{{contributor}}" class="no-underline" aria-label="{{contributor}} on GitHub">
            <img
                class="img-size-m circle"
                srcset="https://github.com/{{ contributor }}.png?size=40 1x,
                          https://github.com/{{ contributor }}.png?size=80 2x"
                src="https://github.com/{{ contributor }}.png" alt="GitHub profile image of {{ contributor }}" loading="lazy" width="40" height="40">
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
